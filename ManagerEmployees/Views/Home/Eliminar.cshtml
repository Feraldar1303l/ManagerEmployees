@model ManagerEmployees.Models.Employee;
@{
    ViewData["Title"] = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3 class="text-danger">¿Estas seguro de eliminar el empleado?</h3>
<hr />
<div class="row">
<div class="col-sm-4">
    <form asp-action="Eliminar" asp-controller="Home" method="post">
        <input type="hidden" asp-for="Id" />

        <div class="mb-2">
            <label class="form-label" asp-for="Name">Name</label>
            <input class="form-control form-control-sm" asp-for="Name" type="text" disabled/>
        </div>

        <div class="mb-2">
            <label class="form-label" asp-for="LastName">Last name</label>
                <input class="form-control form-control-sm" asp-for="LastName" type="text" disabled />
        </div>

        <div class="mb-2">
            <label class="form-label" asp-for="Rfc">RFC</label>
                <input class="form-control form-control-sm" asp-for="Rfc" type="text" disabled />
        </div>

        <div class="mb-2">
            <label class="form-label" asp-for="BornDate">Born date</label>
                <input class="form-control form-control-sm" asp-for="BornDate" type="date" disabled />
        </div>
        <div class="mb-2">
            <label class="form-label" asp-for="IdStatus">Status</label>
                <input class="form-control form-control-sm" asp-for="oStatus.Description" type="date" disabled />
        </div>

        <div class="mb-2">
            <button class="btn btn-danger btn-sm w-25" type="submit">Eliminar</button>
            <a class="btn btn-dark btn-sm" asp-action="Index" asp-controller="Home" asp-route-idEmployee="0">Volver</a>
        </div>

    </form>

</div>
</div>


